{
  "name": "ts-server-boilerplate",
  "version": "0.10.0",
  "description": "TypeScript server Hot reloding boilerplate",
  "author": "Lycolia",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Lycolia/ts-server-boilerplate"
  },
  "main": "./dist/server.js",
  "scripts": {
    "start": "npm run build-ts && node --inspect dist/server.js",
    "dev": "npm run build-ts && node --inspect-brk dist/server.js",
    "build": "npm run build-ts && npm run type-check",
    "type-check": "tsc --noEmit && eslint .",
    "build-ts": "swc src/ -d dist/",
    "test": "jest --watch",
    "coverage": "jest --coverage"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.51",
    "@swc/core": "^1.2.108",
    "@swc/jest": "^0.2.5",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.7",
    "@typescript-eslint/eslint-plugin": "^5.3.1",
    "@typescript-eslint/parser": "^5.3.1",
    "chokidar": "^3.5.2",
    "eslint": "^8.2.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^25.2.2",
    "jest": "^27.3.1",
    "jest-watch-typeahead": "^1.0.0",
    "prettier": "^2.4.1",
    "typescript": "^4.4.4"
  }
}
